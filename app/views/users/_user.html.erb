<li>  <!-- indexで読み込み -->
	<%= gravatar_for user, size: 52 %>
	<%= link_to user.name, user %> 
	<% if current_user.admin? && !current_user?(user) %> <!-- userがadminだったらdeleteはなし。adminカラム(boolean)を加えるだけで、@user.admin?はtrue, falseを返す -->
		| <%= link_to "delete", user, method: :delete, data: { confirm: "You sure?" } %>
	<% end %>
</li>